<div class="card">
    <h5 class="card-header" style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif ; font-size:30px;">All Orders</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Product Name</th>
                    <th>Category</th>
                    <th>Quantuty</th>
                    <th>Price</th>
                    <th>Order status</th>
                    <th>Payment</th>
                    <th>More</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
             <% orders.forEach(function(product){ %>    
                <% product.products.forEach(function(x){ %>
                <tr>
                    <td><img src="/<%= x.productId.imageUrl %>" alt="" style="height: 60px; width:60px ;"></td>
                    <td><%= x.productId.productName %></td>
                    <td style="font-size: large; color:black ;"><%= x.productId.category %></td>
                    <td><%= x.quantity %></td>
                    <td><strong><%= x.total %></strong></td>
                    <td >
                    
                        <div class="dropdown">
                            <% if(x.orderStatus==='Order Placed'){ %>
                            <button
                              class="btn btn-outline-dark dropdown-toggle btn-sm"
                              style="width: 165px"
                              type="button"
                              data-bs-toggle="dropdown"
                              aria-expanded="false"
                            >
                              <%= x.orderStatus %>
                            </button>
                            <% } else if(x.orderStatus==='Shipped'){ %>
                            <button
                              class="btn btn-outline-primary dropdown-toggle btn-sm"
                              style="width: 165px"
                              type="button"
                              data-bs-toggle="dropdown"
                              aria-expanded="false"
                            >
                              <%= x.orderStatus %>
                            </button>
                            <% } else if(x.orderStatus==='Out For Delivery'){ %>
                            <button
                              class="btn btn-outline-info dropdown-toggle btn-sm"
                              style="width: 165px"
                              type="button"
                              data-bs-toggle="dropdown"
                              aria-expanded="false"
                            >
                              <%=x.orderStatus %>
                            </button>
                            <% } else if(x.orderStatus==='Delivered'){ %>
                            <button
                              class="btn btn-outline-success dropdown-toggle btn-sm"
                              style="width: 165px"
                              type="button"
                              data-bs-toggle="dropdown"
                              aria-expanded="false"
                            >
                              <%= x.orderStatus %>
                            </button>
                            <% } else if(x.orderStatus==='Canceled'){ %>
                            <button
                              class="btn btn-outline-danger dropdown-toggle btn-sm"
                              style="width: 165px"
                              type="button"
                              data-bs-toggle="dropdown"
                              aria-expanded="false"
                            >
                              <%= x.orderStatus %>
                            </button>
                            <% } %>
                            <ul class="dropdown-menu">
                              <li>
                                <button
                                  class="dropdown-item"
                                  onclick="edit_order_status('<%= x._id %>','<%= product._id %>', 'Order Placed')"
                                >
                                  Order Placed
                                </button>
                              </li>
                              <li>
                                <button
                                  class="dropdown-item"
                                  onclick="edit_order_status('<%= x._id %>','<%= product._id %>', 'Shipped')"
                                >
                                  Shipped
                                </button>
                              </li>
                              <li>
                                <button
                                  class="dropdown-item"
                                  onclick="edit_order_status('<%= x._id %>','<%= product._id %>', 'Out For Delivery')"
                                >
                                  Out For Delivery
                                </button>
                              </li>
                              <li>
                                <button
                                  class="dropdown-item"
                                  onclick="edit_order_status('<%= x._id %>','<%= product._id %>', 'Delivered')"
                                >
                                  Delivered
                                </button>
                              </li>
                              <li>
                                <button
                                  class="dropdown-item"
                                  onclick="edit_order_status('<%= x._id %>','<%= product._id %>', 'Canceled')"
                                >
                                  Canceled
                                </button>
                              </li>
                            </ul>
                          </div>
                    </td>
                    <td>
                        <% if(product.paymentMethod === 'COD') { %>
                            Cash on Delivery
                       <% }else{  %>
                        Paid
                       <% } %>
                    </td>
                    <td><a href="/admin/invoicePage/<%= x._id %>/<%= product._id %>"><button class="btn btn-outline-info" >Details</Details></button></a></td>
                </tr>
                <% }) %>
                <% }) %>
               
                
            </tbody>
        </table>
    </div>
</div>

<script>
    function edit_order_status (proId,orderId,status) {

        $.ajax({
            url : "/admin/changeOrderStatus",
            data : {
                proId,
                orderId,
                status  
            },
            method : "post",
            success : (response) => {
                if(response.statusChanged){
                    location.href = '/admin/adminOrders'
                    Swal.fire({
					   
                       icon: 'success',
                       text: 'Status Changed', 
                       title: 'successfully',
                       showConfirmButton: false,
                       timer: 1500
                        })
                }else{
                    Swal.fire({
                  icon: "error",
                  title: "oops...",
                  text: "Status Not Changed"
        })
                }
            }
        })

    }
</script>





