        <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    </head>
  <body id="wishlist">
<div>
    

<%- include ('nav.ejs') %>

<div class="card container">
    <h5 class="card-header" style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif ; font-size:30px;">All Orders</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Product Name</th>
                    <th>Category</th>
                    <th>Quantuty</th>
                    <th>Price</th>
                    <th>Order status</th>
                    <th>Payment</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
             <% order.forEach(function(product){ %>    
                <% product.products.forEach(function(x){ %>
                <tr>
                    <td><img src="/<%= x.productId.imageUrl %>" alt="" style="height: 60px; width:60px ;"></td>
                    <td><%= x.productId.productName %></td>
                    <td style="font-size: large; color:black ;"><%= x.productId.category %></td>
                    <td><%= x.quantity %></td>
                    <td><strong><%= x.total %></strong></td>
                    

                    <td>
                        <% if(x.orderStatus==='Order Placed'){ %>
                            <button
                              class="btn btn-outline-dark "
                              style="width: 165px"
                              type="button"
                              
                              aria-expanded="false"
                            >
                              <%= x.orderStatus %>
                            </button>
                            <% } else if(x.orderStatus==='Shipped'){ %>
                            <button
                              class="btn btn-outline-primary "
                              style="width: 165px"
                              type="button"
                              
                              aria-expanded="false"
                            >
                              <%= x.orderStatus %>
                            </button>
                            <% } else if(x.orderStatus==='Out For Delivery'){ %>
                            <button
                              class="btn btn-outline-info "
                              style="width: 165px"
                              type="button"
                              
                              aria-expanded="false"
                            >
                              <%=x.orderStatus %>
                            </button>
                            <% } else if(x.orderStatus==='Delivered'){ %>
                            <button
                              class="btn btn-outline-success "
                              style="width: 165px"
                              type="button"
                              data-bs-toggle="dropdown"
                              aria-expanded="false"
                            >
                              <%= x.orderStatus %>
                            </button>
                            <% } else if(x.orderStatus==='Canceled'){ %>
                            <button
                              class="btn btn-outline-danger "
                              style="width: 165px"
                              type="button"
                              data-bs-toggle="dropdown"
                              aria-expanded="false"
                            >
                              <%= x.orderStatus %>
                            </button>
                            <% } %>
                    </td>
                    <td>
                        <% if(product.paymentMethod === 'COD') { %>
                            Cash on Delivery
                       <% }else{  %>
                        Paid
                       <% } %>
                    </td>
                </tr>
                <% }) %>
                <% }) %>
               
                
            </tbody>
        </table>
    </div>
</div>





