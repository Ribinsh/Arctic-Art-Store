        <script>
             function addToCart (productId, productName) {
             
			 $.ajax({
				 url: '/addToCart/'+productId,
				 method: 'post',

				 success: (response)  => {
					 if (response.status) {
						 Swal.fire({
					   
						 
						icon: 'success',
						text: productName,
						title: 'Item added to Cart',
						showConfirmButton: false,
						timer: 1500
						 })

					 } else {
						 Swal.fire({
					   icon: 'error',
					   title: 'Oops...',
					   text: 'Something went wrong!',

					   })
					 }
				 }
				 
			 })
		  }

          
			 function addToWishlist (productId, productName) {
             
             $.ajax({
                 url: '/addTowishlist/'+productId,
                 method: 'post',

                 success: (response)  => {
                     if (response.status) {
                         Swal.fire({
                       
                         
                        icon: 'success',
                        text: productName,
                        title: 'Item added to wishlist',
                        showConfirmButton: false,
                        timer: 1500
                         })

                     } else {
                         Swal.fire({
                       icon: 'error',
                       title: 'Oops...',
                       text: 'Something went wrong!',

                       })
                     }
                 }
                 
             })
          }
        </script>
    



