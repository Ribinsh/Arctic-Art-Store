                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="row  gutters-sm" id="user"  style="display: none;"  >
            <% if (address != null ) { %>
              <div  id="allAddress"  class="row  d-flex "  >
              <% address.address.forEach(function(data,index) { %> 

              <div class="row card" style="width: 18rem; margin-left: 2em; margin-top: 1em;">
                <div class="card-body">
                  <h6 class="d-flex align-items-center mb-3">
                    <i class="material-icons text-info mr-2">Address</i><%= index %>
                  </h6>
                  <h5 class="card-subtitle mb-2 text-muted"><%= data.fullName %></h5>
                  <h6 class="card-subtitle mb-2 text-dark"><%= data.houseName %></h6>
                  <h6 class="card-subtitle mb-2 text-dark"><%= data.city %></h6>
                  <h6 class="card-subtitle mb-2 text-dark"><%= data.state %></h6>
                  <h6 class="card-subtitle mb-2 text-dark"><%= data.pincode %></h6>
                  <h6 class="card-subtitle mb-2 text-info"><%= data.phone %></h6>
                  
                  
                  <button type="button" onclick="removeAddress('<%= data._id %>')" class="btn btn-danger"> Remove</button>
                 
                </div>
              </div>

              <% }) %> 

            </div>

              






           

             <% } else { %>

            <h5>Address not added</h5>

            <% } %>
          </div>
        </div>
      </div>
    </div>

    <%- include ('userFooter') %>
  </body>

  <script>
    function editData(){
    const editData = document.querySelector("#edit")
    if(editData.style.display == "none") {
      editData.style.display = "block"
    } else {
      editData.style.display = "none"
    }
    }

    function addAddress(){
    const add = document.querySelector("#address")
    if(add.style.display == "none") {
      add.style.display = "block"
    } else {
      add.style.display = "none"
    }
    }

    function allAddress(){
    const addressData = document.querySelector("#user")

    if(addressData.style.display == "none") {
      addressData.style.display = "block"
    } else {
      addressData.style.display = "none"
    }
    }


    function removeAddress (addressId) {
      Swal.fire({
  title: 'Are you sure?',
  text: "Removing this address permenently!",
  icon: 'warning',
  showCancelButton: true,
  confirmButtonColor: '#3085d6',
  cancelButtonColor: '#d33',
  confirmButtonText: 'Yes, delete it!'
}).then((result) => {
  if (result.isConfirmed) {
    $.ajax({
        url:'/removeAddress',
        data :{
            addressId
        },
        method: 'post',
        success: (response) => {
            // $("#allAddress").load("allAddress > *");
            setTimeout(reload,1500)
            
            Swal.fire({
            
            icon: 'success',
            title: 'Your address has been removed',
            showConfirmButton: false,
           
          })
        }
    })
   
  }
})
    }
    function reload(){
      location.reload()
    }
  </script>
