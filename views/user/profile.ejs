<html lang="en">
    <head >
        <title style="color: brown">Arctic</title>
        <meta name="author" content="Zaur">
        <meta descryption content="Presentation of website">
        <meta name="keywords" content="technology, cyber security, software">
        <meta http-equiv="refresh" content="100">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta charset="utf-8">
        <link rel="stylesheet" href="/stylesheets/home/animate.css">
	

        <link rel="stylesheet" href="/public/stylesheets/cart.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
       <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
     <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'> 
     
     <script src="/js/home/modernizr-2.6.2.min.js"></script>
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">

     </head> 
  <body> 
    
    <%- include ('nav.ejs') %>
    

<div class="container">
    <div class="main-body">
    
          <!-- Breadcrumb -->
          <nav aria-label="breadcrumb" class="main-breadcrumb">
            <ol class="breadcrumb">
              <!-- <li class="breadcrumb-item"><a href="index.html">Home</a></li>
              <li class="breadcrumb-item"><a href="javascript:void(0)">User</a></li> -->
              <li class="breadcrumb-item active" aria-current="page">User Profile</li>
            </ol>
          </nav>
          <!-- /Breadcrumb -->
    
          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                    
                    <% if(user.gender == "female") { %>
                    <img src="https://cdn3.iconfinder.com/data/icons/business-avatar-1/512/11_avatar-512.png" alt="Admin" class="rounded-circle" width="150">
                    <% } else { %>
                      <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                    <% } %>
                    <div class="mt-3">
                      <h4><%= user.name %></h4>
                      <p class="text-secondary mb-1"><%= user.email %></p>
                      <!-- <p class="text-muted font-size-sm">Bay Area, San Francisco, CA</p>
                      <button class="btn btn-primary">Follow</button>
                      <button class="btn btn-outline-primary">Message</button> -->
                    </div>
                  </div>
                </div>
              </div>
              <div class="card mt-3">
                <ul class="list-group list-group-flush">
                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <i class="bi bi-cart-check-fill"></i><a href="/orderDetails"><h6 class="mb-0">Orders</h6></a>
                    <span class="text-secondary">@arctic</span>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <i class="bi bi-folder-plus"></i><h6 class="mb-0">Saved address</h6>
                    <span class="text-secondary">arctic</span>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <i class="bi bi-person-video3"></i><h6 class="mb-0">User data</h6>
                    <span class="text-secondary">@arctic</span>
                  </li>
                  
                </ul>
              </div>
            </div>
            <div class="col-md-8">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Full Name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= user.name %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%=user.email %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Phone</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= user.phone %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Gender</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= user.gender %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Address</h6>
                    </div>
                    <% if (address ) { %>
                    <div class="col-sm-9 text-secondary">
                      
                      Address added
                    </div>
                    <% }  else { %>
                      <div class="col-sm-9 text-secondary">
                        <%= user.address %>
                      </div> 
                    <% } %>   
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-12">
                      
                      <a class="btn btn-info " target="__blank" href="/editUser">Edit</a>
                      <% if (address ) { %>
                      <a class="btn btn-success " target="__blank" href="/addAddressPage">Add new address</a>
                      <% }  else { %>
                        <a class="btn btn-success " target="__blank" href="/addAddressPage">Add address</a>
                      <% } %>
                    </div>
                  </div>
                </div>
              </div>

              <div class="row gutters-sm">
                <% if (address != null ) { %>
               
                <div class="col-sm-6 mb-3">
                  <div class="card h-100">
                    <div class="card-body">
                      <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2">Address</i>1</h6>
                      <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                          <h6 class="mb-0"><%= address1.fullName %></h6>
                          <span class="text-secondary">Fulll Name</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                          <h6 class="mb-0"><%= address1.houseName %></h6>
                          <span class="text-secondary">House/Office</span>
                        </li>
                       
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                          <h6 class="mb-0"><%= address1.city %></h6>
                          <span class="text-secondary">City</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                          <h6 class="mb-0"><%= address1.state %></h6>
                          <span class="text-secondary">State</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0"><%= address1.pincode %></h6>
                            <span class="text-secondary">Pincode</span>
                          </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0"><%= address1.phone %></h6>
                            <span class="text-secondary">Phone</span>
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
              



               <% if (address2 != null ) { %>
                <div class="col-sm-6 mb-3">
                  <div class="card h-100">
                    <div class="card-body">
                      <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2">Address</i>2</h6>
                      <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0"><%= address2.fullName %></h6>
                            <span class="text-secondary">Fulll Name</span>
                          </li>
                          <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0"><%= address2.houseName %></h6>
                            <span class="text-secondary">House/Office</span>
                          </li>
                          
                          <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0"><%= address2.city %></h6>
                            <span class="text-secondary">City</span>
                          </li>
                         
                          <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0"><%= address2.state %></h6>
                            <span class="text-secondary">State</span>
                          </li>
                          <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0"><%= address2.pincode %></h6>
                            <span class="text-secondary">Pincode</span>
                          </li>
                          <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                              <h6 class="mb-0"><%= address2.phone %></h6>
                              <span class="text-secondary">Phone</span>
                          </li>
                      </ul>
                    </div>
                  </div>
                </div>

                <% }  %>

                <% }  else { %>

                  <h5>Address not added </h5>

                  <% } %>



              </div>



            </div>
          </div>

        </div>
    </div>

    <%- include ('userFooter') %>