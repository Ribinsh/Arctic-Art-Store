              </ul>
            </div>
          </div>
          <div class="col-md-8">
            <div class="card mb-3">
              <div class="card-body">
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="mb-0">Full Name</h6>
                  </div>
                  <div class="col-sm-9 text-secondary"><%= user.name %></div>
                </div>
                <hr />
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="mb-0">Email</h6>
                  </div>
                  <div class="col-sm-9 text-secondary"><%=user.email %></div>
                </div>
                <hr />
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="mb-0">Phone</h6>
                  </div>
                  <div class="col-sm-9 text-secondary"><%= user.phone %></div>
                </div>
                <hr />
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="mb-0">Gender</h6>
                  </div>
                  <div class="col-sm-9 text-secondary"><%= user.gender %></div>
                </div>
                <hr />
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="mb-0">Address</h6>
                  </div>
                  <% if (address ) { %>
                  <div class="col-sm-9 text-secondary">Address added</div>
                  <% } else { %>
                  <div class="col-sm-9 text-secondary"><%= user.address %></div>
                  <% } %>
                </div>
                <hr />
                <div class="row">
                  <div class="col-sm-12">
                    <button class="btn btn-info" type="button" onclick="editData()" >
                     Edit
                    </button>
                    <% if (address ) { %>
                      <button  class="btn btn-success" onclick="addAddress()"> Add new address</button>
                    
                    <% } else { %>
                      <button  class="btn btn-success"onclick="addAddress()">Add address</button>
                     
                    <% } %>
              <!-- .............Update userData hidden form............. -->
                    <div class="collapse" id="edit" style="display: none;">
                      <div class="card card-body" style="background-color:rgb(185, 185, 185) ;">
                        

                     

                          <form action="/updateUserData" method="post">
                          <div class="row ">
                              <div class="col">
                                <!-- Name input -->
                                <div class="form-outline">
                                  <input type="text" id="form8Example1" name="name" value="<%= user.name %>" class="form-control" />
