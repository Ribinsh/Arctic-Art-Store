                                <div class="form-outline">
                                  <input type="email" id="form8Example2" name="email" value="<%= user.email %>" class="form-control" />
                                  <label class="form-label" for="form8Example2">Email address</label>
                                </div>
                              </div>
                            </div>
                            
                            <hr />
                            
                            <div class="row ">
                              <div class="col">
                                <!-- Name input -->
                                <div class="form-outline">
                                  <input type="text" id="form8Example3" name="phone" value="<%= user.phone %>" class="form-control" />
                                  <label class="form-label" for="form8Example3">Mobile</label>
                                </div>
                              </div>
                              <div class="col">
                                <!-- Name input -->
                                <div class="form-outline ">
                                  <select name="gender" id="gender" name="gender" class="form-control">
                                      <option value="<%= user.gender %> "><%= user.gender %></option>
                                      <option value="male">Male</option>
                                      <option value="female">Female</option>
                                  </select>
                                  <label class="form-label" for="form8Example4">Gender</label>
                                </div>
                              </div>
                              <div class="col">
